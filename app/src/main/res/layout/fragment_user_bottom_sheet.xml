<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/colorPrimary"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <TextView
            android:gravity="center"
            android:id="@+id/tvHeader"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            tools:text="Meghnajii"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>
<LinearLayout
    android:padding="@dimen/_16sdp"
android:layout_marginBottom="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplayregular"
            tools:text="Meghna Dave"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/_8sdp"
android:layout_marginTop="@dimen/_8sdp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaybold"
            tools:text="Meghnajii"
            android:visibility="gone"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13ssp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:id="@+id/ll_followers"
            android:clickable="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp"
                    tools:text="217" />

                <TextView
                    android:layout_gravity="center"

                    android:id="@+id/tv_followers_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:textColor="@color/offWhite"
                    android:textSize="@dimen/_10ssp"
                    android:text="Followers" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center"

                    android:id="@+id/tv_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_10ssp"
                    tools:text="217" />

                <TextView
                    android:layout_gravity="center"

                    android:id="@+id/tv_following_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/sfprodisplaythin"
                    android:textColor="@color/offWhite"
                    android:textSize="@dimen/_10ssp"
                    android:text="Following" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_2sdp"
            android:maxLines="2"
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaythin"
            tools:text="Senior full-stack web-platform chief principal engineering architect for strategic technical opensource operations."
            android:textColor="@color/offWhite"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>